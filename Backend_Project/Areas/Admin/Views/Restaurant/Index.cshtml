@model List<Restaurant>  
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary mb-3" asp-area="Admin" asp-controller="Restaurant" asp-action="Create">Create</a>
        </div>
        <div class="col-lg-12 mt-3">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Address</th>
                        <th scope="col">Profil</th>
                        <th scope="col">Cover</th>
                        <th scope="col">Type</th>
                        <th scope="col">Status</th>
                        <th scope="col">Director</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 0;
                        foreach (var item in Model)
                        {
                            i++;
                            <tr>
                                <th scope="row">@i</th>
                                <td>@item.Name</td>
                                <td>@item.Address</td>
                                <td><img src="~/Uploads/@item.ProfilPictureName" alt="Alternate Text" style="width:150px; max-height:150px;" /></td>
                                <td><img src="~/Uploads/@item.CoverImageName" alt="Alternate Text" style="width:150px; max-height:150px;" /></td>
                                <td>@item.Type</td>
                                <td>@item.Status</td>
                                <td>@item.DirectorName </td>
                                <td>
                                    <a class="btn btn-success" asp-area="Admin" asp-controller="Restaurant" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                    <a class="btn btn-danger" asp-area="Admin" asp-controller="Restaurant" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>