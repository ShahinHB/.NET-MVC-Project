@model Restaurant
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <form asp-area="Admin" asp-controller="Restaurant" asp-action="Update" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label">Name</label>
                    <input class="form-control" asp-for="@Model.Name">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Address" class="form-label">Address</label>
                    <input class="form-control" asp-for="@Model.Name">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.ProfilPicture" class="form-label">Profil Picture </label>
                    <input class="form-control" asp-for="@Model.ProfilPicture">
                    <span asp-validation-for="@Model.ProfilPicture" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.CoverImage" class="form-label">Cover Image</label>
                    <input class="form-control" asp-for="@Model.CoverImage">
                    <span asp-validation-for="@Model.CoverImage" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Type" class="form-label">Type</label>
                    <input id="editor" class="form-control" asp-for="@Model.Type">
                    <span asp-validation-for="@Model.Type" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Status" class="form-label">Status</label>
                    <input id="editor" class="form-control" asp-for="@Model.Status">
                    <span asp-validation-for="@Model.Status" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Location" class="form-label">Status</label>
                    <input id="editor" class="form-control" asp-for="@Model.Location">
                    <span asp-validation-for="@Model.Location" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.About" class="form-label">Status</label>
                    <input id="editor" class="form-control" asp-for="@Model.About">
                    <span asp-validation-for="@Model.About" class="text-danger"></span>
                </div>
                <div class="mb-3 col-3" style="display: inline-block">
                    <label asp-for="@Model.Phone1" class="form-label">Reception</label>
                    <input type="tel" class="form-control" asp-for="@Model.Phone1">
                    <span asp-validation-for="@Model.Phone1" class="text-danger"></span>
                </div>
                <div class="mb-3 col-3" style="display: inline-block">
                    <label asp-for="@Model.Phone2" class="form-label">For Complaints</label>
                    <input type="tel" class="form-control" asp-for="@Model.Phone2">
                    <span asp-validation-for="@Model.Phone2" class="text-danger"></span>
                </div>
                <div class="mb-3 col-3" style="display: inline-block">
                    <label asp-for="@Model.Phone3" class="form-label">Support</label>
                    <input type="tel" class="form-control" asp-for="@Model.Phone3">
                    <span asp-validation-for="@Model.Phone3" class="text-danger"></span>
                </div>
                <br />
                <div class="mb-3">
                    <label asp-for="@Model.DirectorName" class="form-label">Director</label>
                    <input class="form-control" asp-for="@Model.DirectorName">
                    <span asp-validation-for="@Model.DirectorName" class="text-danger"></span>
                </div>
                <div class="mb-3 col-3" style="display: inline-block">
                    <label asp-for="@Model.DirectorMail" class="form-label">Director Mail</label>
                    <input type="email" class="form-control" asp-for="@Model.DirectorMail">
                    <span asp-validation-for="@Model.DirectorMail" class="text-danger"></span>
                </div>
                <div class="mb-3 col-3" style="display: inline-block">
                    <label asp-for="@Model.DirectorPhone" class="form-label">Director Phone</label>
                    <input type="tel" class="form-control" asp-for="@Model.DirectorPhone">
                    <span asp-validation-for="@Model.DirectorPhone" class="text-danger"></span>
                </div>
                <div class="mb-3 col-3" style="display: inline-block">
                    <label asp-for="@Model.DirectorWebsite" class="form-label">Director Website</label>
                    <input type="url" class="form-control" asp-for="@Model.DirectorWebsite">
                    <span asp-validation-for="@Model.DirectorWebsite" class="text-danger"></span>
                </div>
                <br />
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-area="Admin" asp-controller="Restaurant" asp-action="Index">Back to list</a>
            </form>
        </div>
    </div>
</div>
