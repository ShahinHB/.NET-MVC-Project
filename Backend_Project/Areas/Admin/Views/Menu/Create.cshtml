@model Menu
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <form asp-area="Admin" asp-controller="Menu" asp-action="Create" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3 col-5" style="padding-left: 0; display:inline-block">
                    <label asp-for="@Model.Name" class="form-label">Name</label>
                    <input class="form-control" asp-for="@Model.Name">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="mb-3 col-5" style="padding-left: 0; display:inline-block">
                    <label asp-for="@Model.Price" class="form-label">Price</label>
                    <input class="form-control" asp-for="@Model.Price">
                    <span asp-validation-for="@Model.Price" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Ingredients" class="form-label">Ingredients</label>
                    <input class="form-control" asp-for="@Model.Ingredients">
                    <span asp-validation-for="@Model.Ingredients" class="text-danger"></span>
                </div>
                <div class="mb-3 col-3">
                    <label asp-for="@Model.RestaurantId" class="form-label">Restaurant</label>
                    <select class="form-control mb-3" aria-label="Default select example" asp-for="@Model.RestaurantId">
                        <option selected>Select Restaurant</option>
                        @foreach (var item in ViewBag.Restaurant)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span asp-validation-for="@Model.RestaurantId" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-area="Admin" asp-controller="Menu" asp-action="Index">Back to list</a>
            </form>
        </div>
    </div>
</div>
