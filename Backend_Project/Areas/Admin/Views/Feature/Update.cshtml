@model Feature
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form asp-area="Admin" asp-controller="Feature" asp-action="Update" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label">Title</label>
                    <input class="form-control" asp-for="@Model.Name">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <input class="form-control" type="hidden" asp-for="@Model.Id">

                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-area="Admin" asp-controller="Feature" asp-action="Index">Back to list</a>
            </form>
        </div>
    </div>
</div>
